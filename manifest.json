{
  "manifest_version": 3,
  "name": "TweakIt for Microsoft Azure Portal",
  "version": "1.0.2",
  "version_name": "1.0.2-mutsugoro",
  "description": "Add features to Azure Portal",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus"
  ],
  "optional_permissions": [
    "notifications"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_icon": "img/icon128.png"
  },
  "options_ui": {
    "page": "options/main.html",
    "open_in_tab": true
  },
  "icons": {
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "world": "ISOLATED",
      "matches": [
        "https://preview.portal.azure.com/*",
        "https://ms.portal.azure.com/*",
        "https://portal.azure.com/*"
      ],
      "js": [
        "content/js/portal/isolated.js"
      ]
    },
    {
      "all_frames": true,
      "world": "ISOLATED",
      "matches": [
        "https://*.reactblade.portal.azure.net/*"
      ],
      "js": [
        "content/js/sandbox/isolated.js"
      ],
      "css": [
        "content/css/sandbox/isolated.css"
      ]
    },
    {
      "all_frames": true,
      "world": "MAIN",
      "matches": [
        "https://ux.console.azure.com/*"
      ],
      "run_at": "document_start",
      "js": [
        "content/js/cloudshell/main.js"
      ]
    },
    {
      "all_frames": true,
      "world": "ISOLATED",
      "matches": [
        "https://ux.console.azure.com/*"
      ],
      "js": [
        "content/js/cloudshell/isolated.js"
      ]
    }
  ]
}
