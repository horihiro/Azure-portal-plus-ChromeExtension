{
  "manifest_version": 3,
  "name": "TweakIt for Microsoft Azure Portal",
  "version": "1.0.0",
  "version_name": "1.0.0-karei",
  "description": "Add features to Azure Portal",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus"
  ],
  "optional_permissions": [
    "notifications"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_icon": "img/icon128.png",
    "default_popup": "popup/main.html"
  },
  "icons": {
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://preview.portal.azure.com/*",
        "https://ms.portal.azure.com/*",
        "https://portal.azure.com/*"
      ],
      "js": [
        "content/js/main.js"
      ]
    },
    {
      "all_frames": true,
      "matches": [
        "https://sandbox-1.reactblade.portal.azure.net/*",
        "https://sandbox-2.reactblade.portal.azure.net/*"
      ],
      "js": [
        "content/js/sandbox.js"
      ],
      "css": [
        "content/css/sandbox.css"
      ]
    },
    {
      "all_frames": true,
      "world": "MAIN",
      "matches": [
        "https://ux.console.azure.com/*"
      ],
      "js": [
        "content/js/cloudshell/main.js"
      ]
    },
    {
      "all_frames": true,
      "matches": [
        "https://ux.console.azure.com/*"
      ],
      "js": [
        "content/js/cloudshell/isolated.js"
      ]
    }
  ]
}
